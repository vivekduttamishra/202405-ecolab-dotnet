
@model IList<ConceptArchitect.BookManagement.Author>


<h2>Authors</h2>
<a asp-action="Add" class="btn btn-outline-primary btn-sm">Add New Author</a>

<p>Here are @Model.Count best authors you should read</p>

<div class="author_list">
    @foreach(var author in Model)
    {
        <div class="author_info">
            <a href="/authors/info/@author.Id">
                <img src="@author.Photograph"/>
                <span class="author_name">@author.Name</span>
            </a>
        </div>
    }
</div>
